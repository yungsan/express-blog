html
  head
    title= title
    link(
      rel="stylesheet", 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css",integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" ,crossorigin="anonymous")
    link(rel="stylesheet", href="/css/style.css")
  body
    h1(class='heading')= message
    ul(class='navbar')
      each val in ['home', 'users', 'login', 'news', 'about']
        li(class='nav-item')
          a(href=val == 'home' ? '/': '/'+val, class='nav-link')= val
    block content
      